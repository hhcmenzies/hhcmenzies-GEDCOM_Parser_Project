{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/c24_6_canonical_export.strict.schema.json",
  "title": "C.24.6 Canonical GEDCOM Export (Strict)",
  "type": "object",
  "additionalProperties": false,

  "required": ["individuals", "families", "sources", "media_objects", "places"],

  "properties": {
    "individuals": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_individual_strict" }
    },
    "families": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_family_strict" }
    },
    "sources": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_source_strict" }
    },
    "repositories": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_repository_strict" }
    },
    "media_objects": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_media_strict" }
    },
    "places": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/place_record_strict" }
    },
    "uuid_index": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": { "type": "string" }
      }
    }
  },

  "$defs": {
    "uuid": {
      "type": "string",
      "minLength": 8
    },
    "pointer": {
      "type": "string",
      "minLength": 3
    },

    "place_id": {
      "type": "string",
      "minLength": 1,

      "pattern": "^[a-z0-9][a-z0-9 ,.'\\-]*$"
    },

    "event_strict": {
      "type": "object",
      "required": ["tag"],
      "additionalProperties": true,
      "properties": {
        "tag": { "type": "string", "minLength": 1 },
        "place_id": { "type": ["string", "null"] },
        "place_hierarchy": { "$ref": "#/$defs/place_hierarchy_ref_strict" }
      }
    },

    "place_hierarchy_ref_strict": {
      "type": "object",
      "required": ["place_id"],
      "additionalProperties": false,
      "properties": {
        "place_id": { "$ref": "#/$defs/place_id" },
        "parent_id": { "type": ["string", "null"] },
        "ancestor_ids": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        }
      }
    },

    "entity_individual_strict": {
      "type": "object",
      "required": ["uuid", "pointer"],
      "additionalProperties": true,
      "properties": {
        "uuid": { "$ref": "#/$defs/uuid" },
        "pointer": { "$ref": "#/$defs/pointer" },
        "events": {
          "type": "array",
          "items": { "$ref": "#/$defs/event_strict" }
        }
      }
    },

    "entity_family_strict": {
      "type": "object",
      "required": ["uuid", "pointer"],
      "additionalProperties": true,
      "properties": {
        "uuid": { "$ref": "#/$defs/uuid" },
        "pointer": { "$ref": "#/$defs/pointer" },
        "events": {
          "type": "array",
          "items": { "$ref": "#/$defs/event_strict" }
        }
      }
    },

    "entity_source_strict": {
      "type": "object",
      "required": ["uuid", "pointer"],
      "additionalProperties": true,
      "properties": {
        "uuid": { "$ref": "#/$defs/uuid" },
        "pointer": { "$ref": "#/$defs/pointer" }
      }
    },

    "entity_repository_strict": {
      "type": "object",
      "required": ["uuid", "pointer"],
      "additionalProperties": true,
      "properties": {
        "uuid": { "$ref": "#/$defs/uuid" },
        "pointer": { "$ref": "#/$defs/pointer" }
      }
    },

    "entity_media_strict": {
      "type": "object",
      "required": ["uuid", "files"],
      "additionalProperties": true,
      "properties": {
        "uuid": { "$ref": "#/$defs/uuid" },
        "files": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["path"],
            "additionalProperties": true,
            "properties": {
              "path": { "type": "string", "minLength": 1 }
            }
          }
        }
      }
    },

    "place_record_strict": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": true,
      "properties": {
        "id": { "$ref": "#/$defs/place_id" },

        "normalized": { "type": "string" },

        "parent_id": { "type": ["string", "null"] },

        "ancestor_ids": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },

        "child_ids": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },

        "generated": { "type": "boolean" }
      }
    }
  }
}
