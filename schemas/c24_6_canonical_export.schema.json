{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/c24_6_canonical_export.schema.json",
  "title": "C.24.6 Canonical GEDCOM Export",
  "type": "object",
  "required": ["individuals", "families", "sources", "media_objects", "places"],
  "additionalProperties": true,

  "properties": {
    "individuals": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_individual" }
    },
    "families": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_family" }
    },
    "sources": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_source" }
    },
    "repositories": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_repository" }
    },
    "media_objects": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/entity_media" }
    },
    "places": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/place_record" }
    },
    "uuid_index": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": { "type": "string" }
      }
    }
  },

  "$defs": {
    "uuid": { "type": "string", "minLength": 8 },
    "pointer": { "type": "string", "minLength": 3 },

    "entity_individual": {
      "type": "object",
      "required": ["uuid", "pointer"],
      "additionalProperties": true,
      "properties": {
        "uuid": { "$ref": "#/$defs/uuid" },
        "pointer": { "$ref": "#/$defs/pointer" },
        "names": { "type": "array" },
        "events": {
          "type": "array",
          "items": { "$ref": "#/$defs/event" }
        }
      }
    },

    "entity_family": {
      "type": "object",
      "required": ["uuid", "pointer"],
      "additionalProperties": true,
      "properties": {
        "uuid": { "$ref": "#/$defs/uuid" },
        "pointer": { "$ref": "#/$defs/pointer" },
        "events": {
          "type": "array",
          "items": { "$ref": "#/$defs/event" }
        }
      }
    },

    "entity_source": {
      "type": "object",
      "required": ["uuid", "pointer"],
      "additionalProperties": true
    },

    "entity_repository": {
      "type": "object",
      "required": ["uuid", "pointer"],
      "additionalProperties": true
    },

    "entity_media": {
      "type": "object",
      "required": ["uuid"],
      "additionalProperties": true
    },

    "event": {
      "type": "object",
      "required": ["tag"],
      "additionalProperties": true,
      "properties": {
        "tag": { "type": "string" },
        "place_id": { "type": ["string", "null"] },
        "place_hierarchy": { "$ref": "#/$defs/place_hierarchy_ref" }
      }
    },

    "place_hierarchy_ref": {
      "type": "object",
      "required": ["place_id"],
      "additionalProperties": false,
      "properties": {
        "place_id": { "type": "string" },
        "parent_id": { "type": ["string", "null"] },
        "ancestor_ids": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "place_record": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": true,
      "properties": {
        "id": { "type": "string" },
        "normalized": { "type": "string" },
        "raw_examples": {
          "type": "array",
          "items": { "type": "string" }
        },
        "parts": { "type": "object" },
        "levels": { "type": "object" },
        "parent_id": { "type": ["string", "null"] },
        "ancestor_ids": {
          "type": "array",
          "items": { "type": "string" }
        },
        "child_ids": {
          "type": "array",
          "items": { "type": "string" }
        },
        "generated": { "type": "boolean" },
        "generated_from": { "type": "string" }
      }
    }
  }
}
